<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity" >

    <Button
        android:id="@+id/btnMapLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:onClick="mapClick"
        android:text="@string/location_display" />

    <Button
        android:id="@+id/btnAccelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMapLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="accelerometerClick"
        android:text="@string/accelerometer_display" />

</RelativeLayout>